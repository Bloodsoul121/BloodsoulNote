<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gionee.bloodsoulnote">

    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <!-- 只有系统app才有的权限，这里是无效的 -->
    <uses-permission android:name="android.permission.INSTALL_PACKAGES"/>

    <application
        android:name="com.gionee.bloodsoulnote.NoteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.gionee.bloodsoulnote.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.gionee.bloodsoulnote.retrofit2.Retrofit2Activity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.gionee.bloodsoulnote.okhttp.OkhttpActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.gionee.bloodsoulnote.halfitem.HalfItemActivity"/>
        <activity android:name="com.gionee.bloodsoulnote.recyclerview.RecyclerViewActivity"/>
        <activity android:name="com.gionee.bloodsoulnote.silentinstall.SilentInstallActivity"/>

        <service
            android:name="com.gionee.bloodsoulnote.silentinstall.MyAccessibilityService"
            android:label="我的智能安装"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config"/>
        </service>

        <activity android:name="com.gionee.bloodsoulnote.silentinstall.FileExplorerActivity"/>
        <activity android:name="com.gionee.bloodsoulnote.immersive.ImmersiveActivity"/>
        <!-- android:theme="@style/ImmersiveStyle" -->

        <activity android:name="com.gionee.bloodsoulnote.addBookMark.AddBookMarkActivity">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.openfile.OpenFileActivity">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.viewpager.ViewPagerActivity">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.requestpermission.RequestPermissionActivity">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.screenshot.ScreenshotActivity">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.bitmap.ClipPatchActivity">
        </activity>
        <activity
            android:name="com.gionee.bloodsoulnote.viewpagerfragment.ViewPagerFragmentActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.inputbar.InputBarActivity">
        </activity>
        <activity
            android:name="com.gionee.bloodsoulnote.viewpagerfragment.TeacherStudentActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.viewpagerfragment.LazyViewPagerActivity">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.stepdownload.StepDownloadActivity">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.uploadordownload.UploadDownloadActivity">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.webview.WebviewActivity">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.layout.LayoutActivity">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.mvprxpicture.MvpRxPictureActivity">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.recyitemdelete.RecyItemDeleteActivity">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.toast.ToastActivity">
        </activity>
        <activity android:name="com.gionee.bloodsoulnote.recyclerdrag.RecyDragActivity">
        </activity>
    </application>

</manifest>