<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.gionee.bloodsoulnote.webviewdetail.view.CustomSwipeView
        android:id="@+id/swipe_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/comment_detail_top_bar"
            android:background="#FFC0CB"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/comment_detail_back"
                android:src="@drawable/web_bottom_bar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/comment_detail_title"
                android:text="评论详情"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/comment_detail_content"
            android:background="#FFFAF0"
            android:layout_below="@+id/comment_detail_top_bar"
            android:layout_above="@+id/comment_detail_bottom_bar"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/comment_detail_bottom_bar"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/web_detail_bottom_bar_bg"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:text="回复"
            android:drawableLeft="@drawable/web_bottom_bar_comment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/web_bottom_bar_height"/>

        <com.gionee.bloodsoulnote.webviewdetail.view.DiscussView
            android:id="@+id/comment_detail_discuss_view"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:background="#FFF5EE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.gionee.bloodsoulnote.webviewdetail.view.CustomSwipeView>

</merge>