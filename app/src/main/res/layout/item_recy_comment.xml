<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/group_title"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:text="子标题"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.gionee.bloodsoulnote.webviewdetail.view.CircularImageView
        android:id="@+id/user_img"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/group_title"
        android:background="@drawable/user_default_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/comment_container"
        android:layout_below="@+id/group_title"
        android:layout_toRightOf="@+id/user_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name"
            android:text="name"
            android:textColor="#3A5FCD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/like_img"
            android:layout_alignParentRight="true"
            android:src="@drawable/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/like_num"
            android:text="3"
            android:layout_toLeftOf="@+id/like_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/comment_content"
            android:maxLines="5"
            android:layout_below="@+id/user_name"
            android:ellipsize="end"
            android:text="aaaaaaaaaaaaaaaa\naaaaaaaa\na\na\naaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/comment_content_more"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/comment_content"
            android:text="查看更多"
            android:textColor="#3A5FCD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/comment_time"
            android:text="time"
            android:layout_below="@+id/comment_content_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/comment_reply"
            android:layout_below="@id/comment_content_more"
            android:layout_toRightOf="@id/comment_time"
            android:text="·回复他"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:layout_below="@+id/comment_container"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#5e5e5e"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>