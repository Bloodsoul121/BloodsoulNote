<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.gionee.bloodsoulnote.webviewdetail.view.WebDetailView
        android:id="@+id/web_detail_view"
        android:layout_above="@+id/web_bottom_bar"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ViewStub
        android:visibility="gone"
        android:id="@+id/viewstub_discuss_background"
        android:layout="@layout/layout_viewstub_discuss_background"
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ViewStub
        android:visibility="gone"
        android:id="@+id/viewstub_discuss_view"
        android:layout="@layout/layout_viewstub_discuss"
        android:layout_alignParentBottom="true"
        android:background="@color/web_discuss_view_background"
        android:paddingBottom="@dimen/web_discuss_view_padding_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ViewStub
        android:id="@+id/viewstub_web_page_bottom_bar"
        android:layout="@layout/layout_viewstub_web_page_bottom_bar"
        android:layout_alignParentBottom="true"
        android:background="@drawable/web_bottom_bar_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/web_bottom_bar_margin_left"
        android:paddingRight="@dimen/web_bottom_bar_margin_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/web_bottom_bar_height"/>

    <ViewStub
        android:visibility="gone"
        android:id="@+id/viewstub_comment_detail_view"
        android:layout="@layout/layout_viewstub_comment_detail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>