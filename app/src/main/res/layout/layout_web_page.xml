<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.gionee.bloodsoulnote.webviewdetail.view.WebDetailView
        android:id="@+id/web_detail_view"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/discuss_container"
        android:background="#FFF5EE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/discuss_cancel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/webpage_discuss_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/discuss_publish"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/webpage_discuss_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.gionee.bloodsoulnote.webviewdetail.view.ToastEditText
            android:id="@+id/discuss_edit"
            android:background="@null"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:layout_below="@+id/discuss_cancel"
            android:minLines="5"
            android:gravity="top"
            android:maxLength="10"
            android:hint="文案后台配置"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/web_bottom_bar"
        android:background="@drawable/web_bottom_bar_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/web_bottom_bar_margin_left"
        android:paddingRight="@dimen/web_bottom_bar_margin_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/web_bottom_bar_height">

        <ImageView
            android:id="@+id/back"
            android:src="@drawable/web_bottom_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/comment_bar"
            android:background="@drawable/comment_bar_bg"
            android:text="文案后台配置"
             android:gravity="center_vertical"
            android:textColor="@color/web_bottom_bar_comment_bar_text_color"
            android:paddingLeft="16dp"
            android:layout_marginLeft="@dimen/web_bottom_bar_commment_bar_margin_left"
            android:layout_marginRight="@dimen/web_bottom_bar_commment_bar_margin_right"
            android:textSize="@dimen/web_bottom_bar_commment_bar_text_size"
            android:layout_width="@dimen/web_bottom_bar_commment_bar_width"
            android:layout_height="@dimen/web_bottom_bar_commment_bar_height"/>

        <com.gionee.bloodsoulnote.webviewdetail.view.NumImageView
            android:id="@+id/comment_num"
            android:background="@drawable/web_bottom_bar_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/share"
            android:src="@drawable/web_bottom_bar_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/mutil_window"
            android:src="@drawable/web_bottom_bar_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>