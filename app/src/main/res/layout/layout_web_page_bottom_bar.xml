<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back"
        android:layout_alignParentLeft="true"
        android:src="@drawable/web_bottom_bar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/comment_bar"
        android:layout_toRightOf="@+id/back"
        android:background="@drawable/web_bottom_bar_comment_bar_bg"
        android:text="文案后台配置"
        android:gravity="center_vertical"
        android:textColor="@color/web_bottom_bar_comment_bar_text_color"
        android:paddingLeft="16dp"
        android:layout_marginLeft="@dimen/web_bottom_bar_commment_bar_margin_left"
        android:layout_marginRight="@dimen/web_bottom_bar_commment_bar_margin_right"
        android:textSize="@dimen/web_bottom_bar_commment_bar_text_size"
        android:layout_width="@dimen/web_bottom_bar_commment_bar_width"
        android:layout_height="@dimen/web_bottom_bar_commment_bar_height"/>

    <ImageView
        android:id="@+id/comment_num"
        android:layout_toRightOf="@id/comment_bar"
        android:background="@drawable/web_bottom_bar_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/share"
        android:layout_toRightOf="@id/comment_num"
        android:layout_toLeftOf="@+id/mutil_window"
        android:src="@drawable/web_bottom_bar_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/mutil_window"
        android:layout_alignParentRight="true"
        android:src="@drawable/web_bottom_bar_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</merge>